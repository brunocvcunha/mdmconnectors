package com.totvs.hcm.tsa.markgenerator.ui.events;

import java.util.ArrayList;
import java.util.List;

public class MasterConfigurationDataReceivedDispatcher {
	private static MasterConfigurationDataReceivedDispatcher instance;
	private List<MasterConfigurationDataReceivedListener> listeners = new ArrayList<MasterConfigurationDataReceivedListener>();

	private MasterConfigurationDataReceivedDispatcher() {
	}

	public static MasterConfigurationDataReceivedDispatcher getInstance() {
		if(MasterConfigurationDataReceivedDispatcher.instance == null) {
			MasterConfigurationDataReceivedDispatcher.instance = new MasterConfigurationDataReceivedDispatcher();
		}

		return MasterConfigurationDataReceivedDispatcher.instance;
	}

	public void fireMasterConfigurationDataReceived(MasterConfigurationDataReceivedEvent event) {
		for (MasterConfigurationDataReceivedListener listener : this.listeners) {
			listener.onMasterConfigurationDataReceived(event);
		}
	}

	public void addMasterConfigurationDataReceivedListener(MasterConfigurationDataReceivedListener listener) {
		this.listeners.add(listener);
	}

	public void removeMasterConfigurationDataReceivedListener(MasterConfigurationDataReceivedListener listener) {
		this.listeners.remove(listener);
	}
}
