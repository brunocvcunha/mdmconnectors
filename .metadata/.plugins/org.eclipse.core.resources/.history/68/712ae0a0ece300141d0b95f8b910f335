package com.totvs.hcm.tsa.markgenerator.ui.events;

import java.util.ArrayList;
import java.util.List;

public class ExecutionSimulationDispatcher {
	private static ExecutionSimulationDispatcher instance;
	private List<ExecutionSimulationListener> listeners = new ArrayList<ExecutionSimulationListener>();

	private ExecutionSimulationDispatcher() {
	}

	public static ExecutionSimulationDispatcher getInstance() {
		if(ExecutionSimulationDispatcher.instance == null) {
			ExecutionSimulationDispatcher.instance = new ExecutionSimulationDispatcher();
		}

		return ExecutionSimulationDispatcher.instance;
	}

	public void fireMasterConfigurationDataReceived(ExecutionSimulationEvent event) {
		for (ExecutionSimulationListener listener : this.listeners) {
			listener.onExecutionSimulationOccur(event);
		}
	}

	public void addExecutionSimulationListener(ExecutionSimulationListener listener) {
		this.listeners.add(listener);
	}

	public void removeExecutionSimulationListener(ExecutionSimulationListener listener) {
		this.listeners.remove(listener);
	}
}
